:- module(msg, []).

va_al_centro(X) :-
	format('Il veicolo ~w va al centro;~n', [X]).

primo_a_passare(X) :-
	format('Il veicolo ~w è il primo a passare;~n', [X]).

prossimo_a_passare(X) :-
	format('Il veicolo ~w è il prossimo a passare;~n', [X]).

ultimo_a_passare(X) :-
	format('Il veicolo ~w è l\'ultimo a passare;~n', [X]).
